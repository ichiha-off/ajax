<% if book.favorited_by?(current_user) %>
		<%= button_to book_favorites_path(book.id), method: :delete, style: "background-color:white; border: none;", remote: true do %>
			<i class="glyphicon glyphicon-heart" aria-hidden="true" style="color:red;"></i>
		<%= book.favorites.count %>いいね！
		<% end %>
<% else %>
		<%= button_to book_favorites_path(book.id), method: :post, style: "background-color:white; border: none;", remote: true do %>
		<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
		<%= book.favorites.count %> いいね！
		<% end %>
<% end %>